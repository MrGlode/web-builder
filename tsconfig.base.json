{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@site-factory/core-auth": ["libs/core/auth/src/index.ts"],
      "@site-factory/core-http": ["libs/core/http/src/index.ts"],
      "@site-factory/core-config": ["libs/core/config/src/index.ts"],
